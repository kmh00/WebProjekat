
@{
    ViewBag.Title = "DodajCentar";
}

<h2>DodajCentar</h2>

<p>@ViewBag.Message</p>
<div>
    <form action="~/Vlasnik/DodajCentar" method="post">
        <table>
            <tr>
                <td>Naziv:</td>
                <td><input type="text" name="Naziv" /></td>
            </tr>
            <tr>
                <td>Adresa:</td>
                <td><input type="text" name="Adresa" /></td>
            </tr>
            <tr>
                <td>Godina otvaranja:</td>
                <td><input type="number" min="1970" max="2030" name="Godina" /></td>
            </tr>
            <tr>
                <td>Cena mesecne clanarine:</td>
                <td><input type="number" name="CenaMes" /></td>
            </tr>

            <tr>
                <td>Cena godisnje clanarine:</td>
                <td><input type="number" name="CenaGod" /></td>
            </tr>
            <tr>
                <td>Cena jednog treninga:</td>
                <td><input type="number" name="CenaDan" /></td>
            </tr>
            <tr>
                <td>Cena grupnog treninga:</td>
                <td><input type="number" name="CenaGrupa" /></td>
            </tr>
            <tr>
                <td>Cena treninga sa personalnim trenerom:</td>
                <td><input type="number" name="CenaPersonal" /></td>
            </tr>


            <tr>
                <td colspan="2">
                    <input type="submit" value="Dodaj Centar" />
                </td>
            </tr>
        </table>
    </form>
</div>